{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    "dialog:default"
  ]
}